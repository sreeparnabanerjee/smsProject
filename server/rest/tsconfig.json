{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "skipLibCheck": true,
    "lib": [
      "es6",
      "es2015",
      "es2015.promise"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": false,
    "noImplicitAny": false,
    "outDir": ".compiled",
    "typeRoots": ["node_modules/@types/"],
    "types": [
      "node"
    ]
  },
  "include": [
    "src/",
    "index.ts",
    "local.ts",
    "typings-shim.d.ts"
  ],
  "exclude": [
    "node_modules",
    "asyncAwait",
    "plugins.ts"
  ]
}