{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "lib": [
      "es6",
      "dom",
      "es2015.promise",
      "esnext.asynciterable"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "declaration": false,
    "noImplicitAny": false,
    "outDir": ".compiled",
    "typeRoots": ["node_modules/@types/"],
    "types": [
      "node"
    ]
  },
  "include": [
    "src/",
    "typings-shim.d.ts"
  ],
  "exclude": [
    "node_modules",
    "asyncAwait",
    "plugins.ts"
  ]
}