{
  "compilerOptions": {
    "target": "es2016",
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./compiled",
    "preserveConstEnums": true,
    "removeComments": false,
    "sourceMap": true,
    "inlineSources": true,
    "typeRoots" : ["./node_modules/@types"]
  },
  "include": [
    "./specs/**/*",
    "./typings-shim.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}